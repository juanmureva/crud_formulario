<%- include('cab_pie/cabecera'); -%>

<style>
	/* estilo a tabla y formulario */
	table,
	th,
	td {
		border: 1px solid black;
	}

	form {
		/* Centrar el formulario en la página */
		margin: 0 auto;
		width: 400px;
		/* Esquema del formulario */
		padding: 1em;
		border: 1px solid #CCC;
		border-radius: 1em;
	}

	label {
		/* Tamaño y alineación uniforme */
		display: inline-block;
		width: 120px;
		text-align: right;
	}

	a:link {
		color: black;
		text-decoration: none;
	}
</style>

<div align='center'>
	<br>


	<form  action="/addDepartamento" method="POST">
		<div class="form-group">
		  <label for="codigo">codigo</label>
		  <input type="Number" class="form-control" id="codigo" name="codigo" aria-describedby="emailHelp" placeholder="0">
		  <small id="emailHelp" class="form-text text-muted">codigo</small>
		</div>
		<div class="form-group">
			<label for="nombre">nombre</label>
			<input type="text" class="form-control" id="nombre" name="nombre" aria-describedby="emailHelp" placeholder="nombre producto">
			<small id="emailHelp" class="form-text text-muted">nombre.</small>
		  </div>
		<button type="submit" class="btn btn-primary">Submit</button>
	  </form>

	<table style="width:70%">
		<br>
		<tr>
			<th>identificador</th>
			<th>codigo</th>
			<th>nombre</th>
			<th></th>
		</tr>
		<% for (var i = 0; i < departamentos.length; i++) { %>
		<tr>
			<td><%=departamentos[i]._id %></td>
			<td><%=departamentos[i].codigo %></td>
			<td><%=departamentos[i].nombre %></td>
			<td>
				<a href="/borrar_departamento/<%=departamentos[i]._id %>" </a>
					<button type="button" name="button">Borrar</button>
			</td>
		</tr>
		<% } %>
	</table>


</div>



</body>

</html>